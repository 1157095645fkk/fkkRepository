<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.damai.beautiful_article.core.dao.UserMapper">
    <select id="findById" resultMap="ResultMapper">
        select user_id,user_password,user_name,user_sex,user_phone,
         user_email,create_time,operate_time from user where user_id = #{id}
    </select>

    <select id="findByPhone" resultMap="ResultMapper">
        select user_id,user_password,user_name,user_sex,user_phone,
         user_email,create_time,operate_time  from user where user_phone = #{userPhone}
    </select>
    <select id="findCountByPhone" resultType="int">
        SELECT count(*) FROM USER  WHERE user_phone = #{userPhone};
    </select>
    <select id="findCountByUserName" resultType="int">
        SELECT count(*) FROM  USER WHERE  user_name=#{userName};
    </select>

    <!-- 插入信息并返回主键id -->
    <insert id="save" parameterType="cn.damai.beautiful_article.core.domain.User" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO user ( user_password, user_name, user_sex, user_phone, user_email,
        create_time,operate_time)
        VALUES(#{userPassword}, #{userName}, #{userSex},#{userPhone}, #{userEmail},
        #{createTime},#{operateTime})
    </insert>
    <!-- 更新 -->
    <update id="update" parameterType="cn.damai.beautiful_article.core.domain.User">
        UPDATE user
        <set>
            <if test="userAccount != null">user_name=#{user_name},</if>
        </set>
        WHERE user_id = #{id}
    </update>
    <!--根据id删除 -->
    <delete id="deleteById">
        DELETE FROM user WHERE user_id = #{id}
    </delete>

    <resultMap type="cn.damai.beautiful_article.core.domain.User" id="ResultMapper" autoMapping="true">
        <id property="userId" column="user_id"/>
        <result property="userPassword" column="user_password"/>
        <result property="userName" column="user_name"/>
        <result property="userSex" column="user_sex"/>
        <result property="userPhone" column="user_phone"/>
        <result property="userEmail" column="user_email"/>
        <result property="createTime" column="create_time"/>
        <result property="operateTime" column="operate_time"/>
        <result property="dataState" column="data_state"/>
    </resultMap>
</mapper>