<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.damai.beautiful_article.core.dao.SystemLogMapper">
    <select id="findById" resultMap="ResultMapper">
        select * from system_log where log_id = #{id}
    </select>
    <!-- 插入信息并返回主键id -->
    <insert id="save" parameterType="cn.damai.beautiful_article.core.domain.SystemLog" useGeneratedKeys="true"
            keyProperty="id">
        INSERT INTO system_log (log_type, log_content, user_id)
        VALUES(#{logType},#{logContent},#{userId})
    </insert>
    <!-- 更新 -->
    <update id="update" parameterType="cn.damai.beautiful_article.core.domain.SystemLog">
        UPDATE system_log
        <set>
            <if test="logType != null">=#{logType} </if>
        </set>
        WHERE log_id = #{id}
    </update>
    <!--根据id删除 -->
    <delete id="deleteById">
        DELETE FROM user WHERE system_log = #{id}
    </delete>

    <resultMap type="cn.damai.beautiful_article.core.domain.SystemLog" id="ResultMapper" autoMapping="true">
        <id property="logId" column="log_id"/>
        <result property="logType" column="log_type"/>
        <result property="logContent" column="log_content"/>
        <result property="userId" column="user_id"/>
    </resultMap>
</mapper>